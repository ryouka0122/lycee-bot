#!/bin/sh

set -e

npm install --no-audit

export PATH="node_modules/.bin:node_modules/hubot/node_modules/.bin:$PATH"

export PORT=8081

export HUBOT_SLACK_TOKEN=`cat ./bin/HUBOT_SLACK_TOKEN.txt | head -1`

forever start -a -l /app/devops/logs/reimu.log -o /app/devops/logs/reimu.out -e /app/devops/logs/reimu_error.log -c coffee node_modules/.bin/hubot --name "reimu" "$@"

#exec node_modules/.bin/hubot --name "reimu" "$@"
